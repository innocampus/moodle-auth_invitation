{{!

    @template auth_invitation/presignup

    This template renders the pre-signup information page for invited users.

    Example context (json):
    {
        "allowmismatchingemails": true,
        "signupurl": "/login/signup.php",
        "loginurl": "/login/index.php"
    }
}}
<div class="auth_invitation_presignup">
    <h2>
        {{#str}} acceptinvitation, auth_invitation {{/str}}
    </h2>
    <p>
        {{#str}} signuphere, auth_invitation {{/str}}
    </p>
    <p class="fw-bold">
        {{#allowmismatchingemails}}
            {{#str}} registeredusersloginhere, auth_invitation {{/str}}
        {{/allowmismatchingemails}}
        {{^allowmismatchingemails}}
            {{#str}} registereduserscontactteachers, auth_invitation {{/str}}
        {{/allowmismatchingemails}}
    </p>

    <div class="d-flex flex-wrap gap-1">
        <a href="{{signupurl}}" class="btn btn-primary">
            {{#str}} createnewaccount, auth_invitation {{/str}}
        </a>
        <a href="{{loginurl}}" class="btn btn-secondary">
            {{#allowmismatchingemails}}
                {{#str}} alreadyregistered, auth_invitation {{/str}}
            {{/allowmismatchingemails}}
            {{^allowmismatchingemails}}
                {{#str}} cancel {{/str}}
            {{/allowmismatchingemails}}
        </a>
    </div>
</div>
